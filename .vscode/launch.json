    "version": "0.2.0",
    "configurations": [

        {
            "name": "(gdb) MainTcl",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/dbuild/bin/foedag",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Console test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/dbuild/bin/console_test",
            "args": ["--replay", "tests/TestGui/gui_console.tcl"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Synthesis test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/dbuild/bin/foedag",
            "args": ["--batch", "--script", "tests/Testcases/raygentop/raygentop.tcl"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }

    ]
}
